{{#partial "title"}}
    Forests
{{/partial}}


{{#partial "content"}}
    <div class="row main h-100">
        <div class="left col-md-2  h-100 d-flex flex-column align-items-center">
            <div class="header h-25">

                <div class="profile mt-4 text-center">

                    <p class="name">Arnold kagunda</p>
                    <p class="post">Ranger</p>
                </div>

            </div>



            </div>

        </div>

        <div class="right col-md-10  h-100 p-4">
            <div class="nav d-flex justify-content-between">

                <div class="heading mb-4">
                    <h2>WildLife DashBoard</h2>
                    <p>Hello Ted</p>
                </div>

                <div class="nav-btn">

                    <button class="btn" data-bs-toggle="modal" data-bs-target="#exampleModal">Add Animal</button>
                </div>
            </div>



            <div class="row stats d-flex justify-content-between m-4">
                <div class="col-md-3 one ">

                </div>

                <div class=" col-md-3 two ">


                </div>
                <div class="col-md-3 three ">

                </div>
            </div>




            <div class="section-title d-flex justify-content-between">
                <h5>Recorded Sightings</h5>
                <button class="btn" data-bs-toggle="modal" data-bs-target="#sightings">Add Sighting</button>

            </div>



<!--            Sighting table-->
            <div class="tables mt-5  ">
                <table class="table table-striped table-bordered table-hover mt-3">
                    <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Name</th>
                        <th scope="col">Age</th>
                        <th scope="col">Health</th>
                        <th scope="col">Location</th>
                        <th scope="col">Ranger Name</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                    {{#if sightings }}
                        {{#each sightings}}
                            <tr>
                                <th scope="row">{{ id }}</th>
                                <td>{{ name }}</td>
                                <td>{{ age }}</td>
                                <td>{{ health }}</td>
                                <td>{{ location }}</td>
                                <td>{{ rangerName }}</td>
                            </tr>
                        {{/each}}
                    {{/if}}
                    </tbody>
                </table>

            </div>
        </div>

    </div>

    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Record Sighting</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/addAnimal" method="post">
                        <div class="mb-3">
                            <label for="formGroupExampleInput" class="form-label">Animal Name</label>
                            <input   type="text" name="name" class="form-control" id="" placeholder="">
                        </div>
                        <div class="form-group form-check">
                            <input type="checkbox" class="form-check-input" id="endangeredInput" name="endangeredInput">
                            <label class="form-check-label" for="endangeredInput">Endangered?</label>
                        </div>
                        <div class="mb-3">
                            <label for="formGroupExampleInput2" class="form-label">Animal Age</label>
                            <input type="text" name="age" class="form-control" id="f" placeholder="">
                        </div>
                        <div class="mb-3">
                            <label for="formGroupExampleInput2" class="form-label">Animal Health</label>
                            <input type="text" name="health" class="form-control" id="f" placeholder="">
                        </div>

                        <button type="submit" class="btn" data-bs-dismiss="modal">Submit</button>
                    </form>
                </div>

            </div>
        </div>
    </div>

    <div class="modal fade" id="sightings" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">your Sighting</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/addSighting" method="post" >


                        <select class="form-select" aria-label="Default select example" name="id">
                            {{#if animals }}
                                <option selected>Open the selected place</option>
                                {{#each animals }}
                                    <option  value="{{ id }}">{{ id }}</option>
                                {{/each}}
                            {{/if}}

                        </select>

                        <div class="mb-3">
                            <label for="formGroupExampleInput2" class="form-label">Location</label>
                            <input type="text" name="location" class="form-control" id="f" placeholder="">
                        </div>
                        <div class="mb-3">
                            <label for="formGroupExampleInput2" class="form-label">Ranger Name</label>
                            <input type="text" name="rangerName" class="form-control" id="f" placeholder="">
                        </div>

                        <button class="btn" type="submit">Submit</button>
                    </form>
                </div>

            </div>
        </div>
    </div>

{{/partial}}


{{> layout.hbs }}